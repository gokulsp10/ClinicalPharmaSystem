@model ClinicalPharmaSystem.Models.PatientModel

<h2>Add Patient</h2>

<form asp-action="SavePatient" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="PatientName">Patient Name:</label>
                <input type="text" autocomplete="off" class="form-control" required asp-for="PatientName" />
            </div>
            <div class="form-group">
                <label for="MobileNo">Mobile No:</label>
                <input type="text" autocomplete="off" class="form-control" required asp-for="MobileNo" />
            </div>
            <div class="form-group">
                <label for="Address">Address:</label>
                <input type="text" autocomplete="off" class="form-control" required asp-for="Address" />
            </div>
            <div class="form-group">
                <label for="Sex">Sex:</label>
                <select name="Sex" autocomplete="off" class="form-control" required asp-for="Sex">
                    <option value="M" selected>M</option>
                    <option value="F">F</option>
                    <option value="O">O</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Age">Age:</label>
                <input type="text" autocomplete="off" class="form-control" required asp-for="Age" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="Date">Date:</label>
                <input type="date" autocomplete="off" class="form-control" required asp-for="Date" />
            </div>
            <div class="form-group">
                <label for="BloodPressure">Blood Pressure:</label>
                <input type="text" autocomplete="off" class="form-control" required asp-for="BloodPressure" />
            </div>
            <div class="form-group">
                <label for="PulseRate">Pulse Rate:</label>
                <input type="text" autocomplete="off" class="form-control" required asp-for="PulseRate" />
            </div>
            <div class="form-group">
                <label for="Weight">Weight:</label>
                <input type="text" autocomplete="off" class="form-control" required asp-for="Weight" />
            </div>
            <div class="form-group">
                <label for="SpO2">SpO2:</label>
                <input type="text" autocomplete="off" class="form-control" required asp-for="SpO2" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
<div class="position-fixed bottom-0 end-0 p-3" id="toastContainer">
    <div id="successToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="5000">
        <div class="toast-header">
            <strong class="me-auto">Success</strong>
            <small>Just now</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Records saved successfully.
        </div>
    </div>
</div>
<script>
    // JavaScript to show the toast
    document.addEventListener("DOMContentLoaded", function () {
        var successToast = new bootstrap.Toast(document.getElementById("successToast"));

        // Check if a success parameter is set in the URL (you can customize this logic)
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.has("success")) {
            successToast.show();
        }
    });
</script>